@{
    Layout = null;
}
@model CMS.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/assets/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">

            <!-- Mixins-->
            <!-- Pen Title-->
            <div class="pen-title">
                <h1>Admin Login</h1>
            </div>
            <div class="container">
                <div class="card"></div>
                <div class="card">
                    <h1 class="title">Login</h1>
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="input-container">
                            <span class="text-danger field-validation-error">@Html.ValidationMessage("LoginFailed")</span>
                        </div>
                        <div class="input-container">
                            <input asp-for="Username" type="text" id="Email" required="required" />
                            <label asp-for="Username">Username</label>
                            <div class="bar"></div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="input-container">
                            <input asp-for="Password" type="password" id="Password" required="required" />
                            <label asp-for="Password">Password</label>
                            <div class="bar"></div>

                        </div>
                        <div class="input-container">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="button-container">
                            <button>
                                <span>Go</span>
                            </button>
                        </div>
                        @*<div class="footer"><a href="#">Forgot your password?</a></div>*@
                        <div class="button-container">
                            <a href="/admin/register" class="login-button btn btn-default">Register</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>
</html>